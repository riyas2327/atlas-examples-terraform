{
  "node_name": "{{ node_name }}",
  "service": {
    "name": "nomad-client"
  },

  "atlas_join": true,
  "atlas_infrastructure": "{{ atlas_username }}/{{ atlas_environment }}",
  "atlas_token": "{{ atlas_token }}",

  "data_dir": "/opt/consul/data",
  "ui_dir": "/opt/consul/web",

  "client_addr": "0.0.0.0",
  "bind_addr": "0.0.0.0",
  "advertise_addr": "{{ local_ipv4 }}",

  "leave_on_terminate": true,
  "skip_leave_on_interrupt": true,

  "datacenter": "{{ region }}"
}
